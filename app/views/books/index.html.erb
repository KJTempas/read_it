<h1>Book listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Delete', book_path(book), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>