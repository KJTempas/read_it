<h1>Add a new book</h1>

<%= form_with scope: :book, url: books_path, local: true do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%=f.label :author %><br/>
        <%=f.text_field :author %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
